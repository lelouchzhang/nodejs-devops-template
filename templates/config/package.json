{
  "name": "your-app-name",
  "version": "1.0.0",
  "description": "Node.js Express API with DevOps best practices",
  "type": "module",
  "main": "src/index.js",
  "imports": {
    "#src/*": "./src/*",
    "#config/*": "./src/config/*",
    "#controllers/*": "./src/controllers/*",
    "#middleware/*": "./src/middleware/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*",
    "#validations/*": "./src/validations/*"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "prod:docker": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "build": "echo 'No build step required for Node.js'",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/your-app-name.git"
  },
  "keywords": ["nodejs", "express", "api", "devops", "docker"],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/your-app-name/issues"
  },
  "homepage": "https://github.com/your-username/your-app-name#readme",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "winston": "^3.17.0",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^6.0.0",
    "zod": "^4.1.11",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.44.5",
    "@neondatabase/serverless": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,mjs}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}